<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="validate">
  <Description>Validation Endpoint</Description>

  <HTTPProxyConnection>
    <BasePath>/crypto-wssec/validate</BasePath>
  </HTTPProxyConnection>

  <FaultRules>
    <FaultRule name='rule1'>
      <Step>
        <Name>AM-WS-Sec-Error-Payload</Name>
      </Step>
      <Condition>wssec_valid = false</Condition>
    </FaultRule>
  </FaultRules>

  <DefaultFaultRule name="default-fault-rule">
    <Step>
      <Name>AM-Inject-Proxy-Revision-Header</Name>
    </Step>
    <AlwaysEnforce>true</AlwaysEnforce>
  </DefaultFaultRule>

  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>AM-Key-Variables</Name>
      </Step>
    </Request>
    <Response>
      <Step>
        <Name>AM-Clean-Request-Headers-From-Response</Name>
      </Step>
      <Step>
        <Name>JS-Remove-Client-Cert-Headers</Name>
      </Step>
    </Response>
  </PreFlow>

  <PostFlow name="PostFlow">
    <Response>
      <Step>
        <Name>AM-Inject-Proxy-Revision-Header</Name>
      </Step>
    </Response>
  </PostFlow>

  <Flows>
    <Flow name="flow1">
      <Description>This will work for /t1 /t2... /t5</Description>
      <Request>
        <Step>
          <Name>AM-Set-Provide-Cert-Flag</Name>
          <Condition>
            (request.verb = "GET") AND (proxy.pathsuffix ~~ "/t[345]")
          </Condition>
        </Step>
        <Step>
          <!-- call the sign endpoint to get a signed payload -->
          <Name>SC-Get-Signed-Payload</Name>
        </Step>
        <Step>
          <Name>JS-Validate</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-Validation-Response</Name>
        </Step>
      </Response>
      <Condition>
        (request.verb = "GET") AND (proxy.pathsuffix ~~ "/t[12345]")
      </Condition>
    </Flow>

    <Flow name="unknown request">
      <Request>
        <Step>
          <Name>RF-Unknown-Request</Name>
        </Step>
      </Request>
    </Flow>

  </Flows>

  <!-- no target; this proxy demonstrates things within Apigee -->
  <RouteRule name="NoRouteRule"/>

</ProxyEndpoint>
