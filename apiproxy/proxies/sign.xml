<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="sign">
  <Description>Signing Endpoint</Description>

  <HTTPProxyConnection>
    <BasePath>/crypto-wssec/sign</BasePath>
  </HTTPProxyConnection>

  <DefaultFaultRule name="default-fault-rule">
    <Step>
      <Name>AM-Inject-Proxy-Revision-Header</Name>
    </Step>
    <AlwaysEnforce>true</AlwaysEnforce>
  </DefaultFaultRule>

  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>AM-Unsigned-Sample-Payload</Name>
      </Step>
      <Step>
        <Name>AM-Key-Variables</Name>
      </Step>
    </Request>
    <Response>
      <Step>
        <Name>AM-Clean-Request-Headers-From-Response</Name>
      </Step>
    </Response>
  </PreFlow>

  <PostFlow name="PostFlow">
    <Request>
      <Step>
        <Name>JS-Sign</Name>
        <Condition>desired_key_identifier_type != null</Condition>
      </Step>
    </Request>
    <Response>
      <Step>
        <Name>AM-Inject-Proxy-Revision-Header</Name>
      </Step>
    </Response>
  </PostFlow>

  <Flows>
    <Flow name="flow0">
      <Request>
        <!-- no signing - just return the unsigned doc -->
      </Request>
      <Response>
        <Step>
          <Name>AM-Unsigned-Doc-as-Response</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/t0") and (request.verb = "GET")</Condition>
    </Flow>

    <Flow name="flow1">
      <Request>
        <Step>
          <Name>AM-Key-Identifier-BST_DIRECT_REFERENCE</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-Signed-Response</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/t1") and (request.verb = "GET")</Condition>
    </Flow>

    <Flow name="flow2">
      <Request>
        <Step>
          <Name>AM-Key-Identifier-X509_CERT_DIRECT</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-Signed-Response</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/t2") and (request.verb = "GET")</Condition>
    </Flow>

    <Flow name="flow3">
      <Request>
        <Step>
          <Name>AM-Key-Identifier-ISSUER_SERIAL</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-Signed-Response</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/t3") and (request.verb = "GET")</Condition>
    </Flow>

    <Flow name="flow4">
      <Request>
        <Step>
          <Name>AM-Key-Identifier-THUMBPRINT</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-Signed-Response</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/t4") and (request.verb = "GET")</Condition>
    </Flow>

    <Flow name="flow5">
      <Request>
        <Step>
          <Name>AM-Key-Identifier-RSA_KEY_VALUE</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-Signed-Response</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/t5") and (request.verb = "GET")</Condition>
    </Flow>

    <Flow name="unknown request">
      <Request>
        <Step>
          <Name>RF-Unknown-Request</Name>
        </Step>
      </Request>
      <Response>
      </Response>
    </Flow>

  </Flows>

  <!-- no target; this proxy demonstrates things within Apigee -->
  <RouteRule name="NoRouteRule"/>

</ProxyEndpoint>
